# Backend Environment Variables
PORT=8000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/cricket_stock_trading
MONGODB_TEST_URI=mongodb://localhost:27017/cricket_stock_trading_test

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@cricketstocks.com

# Payment Gateway Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# WebSocket Configuration
WS_PORT=8001

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379

# Frontend Environment Variables
API_BASE_URL=http://localhost:8000/api
WS_URL=ws://localhost:8001

# App Configuration
APP_NAME=Cricket Stock Trading
APP_VERSION=1.0.0
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=INR

# Feature Flags
ENABLE_SOCIAL_LOGIN=true
ENABLE_PHONE_AUTH=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=true

# Third-party Services
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600

# Security
CORS_ORIGIN=http://localhost:3000
ALLOWED_DOMAINS=localhost,cricketstocks.com
MAX_FILE_SIZE=5242880 # 5MB in bytes

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Development Tools
ENABLE_SWAGGER=true
ENABLE_MORGAN=true
