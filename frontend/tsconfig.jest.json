{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "isolatedModules": false,
    "types": [
      "jest",
      "node",
      "@types/jest",
      "@testing-library/jest-dom",
      "@testing-library/react-native"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "jest.setup.ts"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    "build",
    "coverage"
  ]
}
